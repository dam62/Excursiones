<odoo>
  <data>

    <!-- ===================== -->
    <!-- VISTA LISTA EXCURSIONES -->
    <!-- ===================== -->
    <record id="view_excursion_list" model="ir.ui.view">
      <field name="name">excursiones.excursion.list</field>
      <field name="model">excursiones.excursion</field>
      <field name="arch" type="xml">
        <list string="Excursiones">
          <field name="nombre_excursion"/>
          <field name="fecha_excursion"/>
          <field name="lugar_encuentro"/>
          <field name="descripcion_excursion"/>
        </list>
      </field>
    </record>

    <!-- ===================== -->
    <!-- VISTA FORMULARIO EXCURSIONES -->
    <!-- ===================== -->
     <record id="view_excursion_form" model="ir.ui.view">
      <field name="name">excursiones.excursion.form</field>
      <field name="model">excursiones.excursion</field>
      <field name="arch" type="xml">
        <form string="Excursión">
          <header>
            <!-- Botón actualizado con el ID correcto -->
            <button name="%(excursiones.action_report_excursion)d"
                    string="Información de la Excursión"
                    type="action"
                    class="oe_highlight"
                    icon="fa-print"/>
          </header>
          <sheet>
            <group>
              <field name="nombre_excursion"/>
              <field name="fecha_excursion"/>
              <field name="lugar_encuentro"/>
              <field name="descripcion_excursion"/>
            </group>
            <notebook>
              <page string="Destinos">
                <field name="ids_destino"/>
              </page>
              <page string="Profesores">
                <field name="ids_profesor"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- ===================== -->
    <!-- VISTAS DESTINOS -->
    <!-- ===================== -->
    <record id="view_destino_list" model="ir.ui.view">
      <field name="name">excursiones.destino.list</field>
      <field name="model">excursiones.destino</field>
      <field name="arch" type="xml">
        <list string="Destinos">
          <field name="nombre_destino"/>
          <field name="tiempo_visita"/>
          <field name="id_excursion"/>
        </list>
      </field>
    </record>

    <record id="view_destino_form" model="ir.ui.view">
      <field name="name">excursiones.destino.form</field>
      <field name="model">excursiones.destino</field>
      <field name="arch" type="xml">
        <form string="Destino">
          <sheet>
            <group>
              <field name="nombre_destino"/>
              <field name="tiempo_visita"/>
              <field name="id_excursion"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- ===================== -->
    <!-- VISTAS PROFESORES -->
    <!-- ===================== -->
    <record id="view_profesor_list" model="ir.ui.view">
      <field name="name">excursiones.profesor.list</field>
      <field name="model">excursiones.profesor</field>
      <field name="arch" type="xml">
        <list string="Profesores">
          <field name="nombre_profesor"/>
          <field name="dni_profesor"/>
          <field name="curso"/>
          <field name="telefono"/>
          <field name="id_excursion"/>
        </list>
      </field>
    </record>

    <record id="view_profesor_form" model="ir.ui.view">
      <field name="name">excursiones.profesor.form</field>
      <field name="model">excursiones.profesor</field>
      <field name="arch" type="xml">
        <form string="Profesor">
          <sheet>
            <group>
              <field name="dni_profesor"/>
              <field name="nombre_profesor"/>
              <field name="telefono"/>
              <field name="curso"/>
              <field name="id_excursion"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- ===================== -->
    <!-- ACCIONES -->
    <!-- ===================== -->
    <record id="action_excursion" model="ir.actions.act_window">
      <field name="name">Excursiones</field>
      <field name="res_model">excursiones.excursion</field>
      <field name="view_mode">list,form</field>
    </record>

    <record id="action_destino" model="ir.actions.act_window">
      <field name="name">Destinos</field>
      <field name="res_model">excursiones.destino</field>
      <field name="view_mode">list,form</field>
    </record>

    <record id="action_profesor" model="ir.actions.act_window">
      <field name="name">Profesores</field>
      <field name="res_model">excursiones.profesor</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- ===================== -->
    <!-- MENÚ PRINCIPAL -->
    <!-- ===================== -->
    <menuitem id="menu_excursiones_root" name="Excursiones"
      web_icon="excursiones/static/description/Logo excursiones.png"/>

    <!-- SUBMENÚS -->
    <menuitem id="menu_excursiones_excursiones" name="Excursiones"
              parent="menu_excursiones_root" action="action_excursion"/>
    <menuitem id="menu_excursiones_destinos" name="Destinos"
              parent="menu_excursiones_root" action="action_destino"/>
    <menuitem id="menu_excursiones_profesores" name="Profesores"
              parent="menu_excursiones_root" action="action_profesor"/>

  </data>
</odoo>
